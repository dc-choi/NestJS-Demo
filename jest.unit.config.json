{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "./",
    "testRegex": ".*\\.unit\\.ts$",
    "testEnvironment": "node",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "^@api/(.*)$": "<rootDir>/src/api/$1",
        "^@global/(.*)$": "<rootDir>/src/global/$1",
        "^@infra/(.*)$": "<rootDir>/src/infra/$1"
    }
}
